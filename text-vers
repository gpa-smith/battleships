from random import randint
#define playing board
board = []

for x in range(5):
    board.append(["O"] * 5)
#format board appearance, separate 0's with spaces
def print_board(board):
    for row in board:
        print " ".join(row)
#welcome message
print "Let's play Battleship!"
print_board(board)

#set random column and row of battleship
def random_row(board):
    return randint(0, len(board) - 1)

def random_col(board):
    return randint(0, len(board[0]) - 1)

ship_row = random_row(board)
ship_col = random_col(board)

# loop for each turn

for turn in range(4):
    guess_row = int(raw_input("Guess Row:"))
    guess_col = int(raw_input("Guess Col:"))
    #win scenario if guess hits ship position
    if guess_row == ship_row and guess_col == ship_col:
        print "Congratulations! You sunk my battleship!"
        break
    #lose scenario if miss or shot off board or same position
    else:
        if (guess_row < 0 or guess_row > 4) \
        or (guess_col < 0 or guess_col > 4):
            print "Oops, that's not even in the ocean."
        elif(board[guess_row][guess_col] == "X"):
            print "You guessed that one already."
        else:
            print "You missed my battleship!"
            board[guess_row][guess_col] = "X"
    #finish scenario
    if turn == 3:
        print "Game Over"
    print "Turn", turn + 1
    print_board(board)
